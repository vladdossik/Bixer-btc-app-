<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ThirdFragment">

    <Button
        android:id="@+id/btnHit"
        android:layout_width="89dp"
        android:layout_height="64dp"

        android:layout_alignTop="@+id/btnHi"
        android:layout_centerHorizontal="true"
        android:text="latest block"
        android:textSize="12dp" />

    <Button
        android:id="@+id/btnHi"
        android:layout_width="97dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="12dp"
        android:layout_marginStart="12dp"

        android:layout_marginTop="37dp"
        android:text="BTC rate "
        android:textSize="12dp" />

    <Button
        android:id="@+id/btnH"
        android:layout_width="97dp"
        android:layout_height="64dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"

        android:layout_alignTop="@+id/btnHit"
        android:layout_marginEnd="11dp"
        android:layout_marginRight="11dp"
        android:text="Average size "
        android:textSize="12dp" />

    <TextView
        android:id="@+id/tvJsonItem"
        android:layout_width="308dp"
        android:layout_height="236dp"
        android:layout_centerInParent="true"
        android:text=""
        android:textColor="#CCCCCC" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="309dp"
        android:layout_height="99dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="Here you can find the price of bitcoin, information about the last block and the average block size for the last 24 hours"
        android:textColor="#CCCCCC" />

</RelativeLayout>